<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>webapp.login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>jdbc.signup</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>admin</servlet-name>
        <servlet-class>webapp.Admin</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/Admin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>webapp.logout</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>webapp.Search</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteComment</servlet-name>
        <servlet-class>webapp.DeleteComment</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteUser</servlet-name>
        <servlet-class>adminka.DeleteUser</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SearchUser</servlet-name>
        <servlet-class>adminka.SearchUser</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SearchProfessor</servlet-name>
        <servlet-class>adminka.SearchProfessor</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteProfessor</servlet-name>
        <servlet-class>adminka.DeleteProfessor</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddProfessor</servlet-name>
        <servlet-class>adminka.AddProfessor</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UpdateProfessorFinal</servlet-name>
        <servlet-class>adminka.UpdateProfessorFinal</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UpdateProfessor</servlet-name>
        <servlet-class>adminka.UpdateProfessor</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SearchHandler</servlet-name>
        <servlet-class>adminka.SearchHandler</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteComment</servlet-name>
        <url-pattern>/DeleteComment</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SearchHandler</servlet-name>
        <url-pattern>/SearchHandler</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteUser</servlet-name>
        <url-pattern>/DeleteUser</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/Search</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SearchUser</servlet-name>
        <url-pattern>/SearchUser</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SearchProfessor</servlet-name>
        <url-pattern>/SearchProfessor</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteProfessor</servlet-name>
        <url-pattern>/DeleteProfessor</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddProfessor</servlet-name>
        <url-pattern>/AddProfessor</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UpdateProfessor</servlet-name>
        <url-pattern>/UpdateProfessor</url-pattern>
